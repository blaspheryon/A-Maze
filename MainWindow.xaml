<Window x:Class="AMaze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:renderer="clr-namespace:AMaze.Renderer"
        Title="A-Mazer" Height="700" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar column -->
            <ColumnDefinition Width="250"/>
            <!-- Maze panel takes the rest -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Sidebar with Tabs -->
        <TabControl Grid.Column="0">
            <!-- Generation Tab -->
            <TabItem Header="Generation">
                <StackPanel Margin="10" VerticalAlignment="Top">
                    <Button Content="Generate Maze" Margin="0 0 0 10" Click="GenerateMaze_Click"/>
                    <Button Content="Reset" Margin="0 0 0 10" Click="ResetMaze_Click"/>

                    <TextBlock Text="Algorithm:" Margin="0 10 0 0"/>
                    <ComboBox x:Name="CbAlgorithms" Width="200"/>

                    <TextBlock Text="Wall Color:" Margin="0 10 0 0"/>
                    <Button Content="Pick Wall Color" Width="100" Click="PickWallColor_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Pathfinding Tab -->
            <TabItem Header="Pathfinding">
                <StackPanel Margin="10" VerticalAlignment="Top">
                    <Button Content="Find Path" Margin="0 0 0 10" Click="FindPath_Click"/>
                    <TextBlock Text="Path Algorithm:" Margin="0 10 0 0"/>
                    <ComboBox x:Name="CbPathAlgorithms" Width="200"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- RIGHT: Maze Panel wrapped in Viewbox for scaling -->
        <!-- RIGHT: Maze Panel wrapped in Viewbox for scaling -->
        <Grid Grid.Column="1" Background="Transparent">
                <renderer:MazeDrawer x:Name="MazeDrawerControl"
                             MinWidth="500"
                             MinHeight="500"/>
        </Grid>

    </Grid>
</Window>
