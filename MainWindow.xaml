<Window x:Class="A_Maze_ZPCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:renderer="clr-namespace:AMaze.Renderer"
        Title="Maze Demo" Height="800" Width="1143">
    <Grid x:Name="MainGrid" Margin="10,10,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="315*"/>
            <ColumnDefinition Width="818*"/>
        </Grid.ColumnDefinitions>
        <!-- Maze drawer -->
        <renderer:MazeDrawer x:Name="MazeDrawerControl"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Width="798"
                             Height="684" RenderTransformOrigin="0.5,0.5" Grid.Column="1"/>
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="10,10,0,0" Height="30" Width="189">
            <Button Content="Generate Maze" Click="GenerateMaze_Click" Margin="5"/>
            <Button Content="Reset Start/End" Click="ResetStartEnd_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
